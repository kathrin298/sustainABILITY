<%= simple_form_for(developer) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :location %>
  <%= f.input :slogan %>
  <%= f.input :interests, placeholder: 'Reduce waste, save turtles, help minorities..' %>
  <%= f.input :bio, input_html: { minlength: 100 } %>
  <%= f.input :website, placeholder: 'www.your_website.com' %>
  <%= f.input :hireable, label: 'Availability' ,collection: Developer::HIREABLE_OPTIONS %>
  <%= f.input :github, placeholder: "Enter your github profile URL..." %>
  <%= f.input :facebook, placeholder: "Enter your facebook profile URL..." %>
  <%= f.input :twitter, placeholder: "Enter your twitter profile URL..." %>
  <%= f.input :linkedin, placeholder: "Enter your linkedin profile URL..." %>
  <%= f.input :photo, as: :file %>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
