              <h1><%= developer.first_name %> <%= developer.last_name %></h1>
              <p>Proficiency: </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="carousel-search-bar">
      <%= render 'pages/searchbar', search_type: 'dev_skills', btn_class: "btn btn-flat", placeholder: "Javascript, Python, Ruby..." %>
    </div>
  </div>
</div>
<div class="green-carousel">
  <div class="container">
    <div class="carousel-title">
      <h1>Or by developers whose interests align with your startups values:</h1>
    </div>
