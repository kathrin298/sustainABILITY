  </div>
</div>
<div class="green-carousel">
  <div class="container">
    <div class="carousel-title">
      <h1>Find a developer in your city:</h1>
    </div>
    <div class="carousel">
      <% @developers.sample(10).each do |developer| %>
        <%= link_to developer_path(developer) do %>
          <div class="landing-page-card d-block">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" id="avatar" height="75" width="75" style="margin: 0 auto 15px auto;">
            <div class="card-info">
              <h1><%= developer.first_name %> <%= developer.last_name %></h1>
              <p>
                Location:
                <br>
                <%= developer.location %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="carousel-search-bar">
       <%= render 'pages/searchbar', search_type: 'dev_location', btn_class: "btn btn-flat-reverse", placeholder: "New York, London, Berlin..." %>
    </div>
  </div>
</div>
<div class="grey-carousel">
  <div class="container">
    <div class="carousel-title">
      <h1>Search developers by programming language:</h1>
    </div>
    <div class="carousel">
      <% @developers.sample(10).each do |developer| %>
        <%= link_to developer_path(developer) do %>
          <div class="landing-page-card d-block">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" id="avatar" height="75" width="75" style="margin: 0 auto 15px auto;">
