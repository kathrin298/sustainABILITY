<div class="container">
  <div class="row">
    <div class="col-4 mx-auto">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-success w-100" %>
        </div>


        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-dark my-2 w-100" do %>
              <div class="d-flex">
                <i style="font-size: 22px; align-text: left;" class="fab fa-github"></i>
                <span class="mx-auto">Log in with <%= OmniAuth::Utils.camelize(provider) %></span>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <br><br>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Register as a new user", new_registration_path(resource_name), class: "btn btn-light border my-2 w-100" %><br />
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>

      <% end %>

      <%#= render "devise/shared/links" %>

    </div>
  </div>
</div>
