<div class="banner">
  <%= link_to "I'm a Developer", companies_path %>
  <%= link_to "I'm a Startup", developers_path, style: "color: red" %>
</div>


<%= render 'pages/searchbar', search_type: 'dev_location', placeholder: "Search for a developer by location..." %>
<%= render 'pages/searchbar', search_type: 'company_location', placeholder: "Search for a company by location..." %>
<%= render 'pages/searchbar', search_type: 'company', placeholder: "Search for a company..." %>
<%= render 'pages/searchbar', search_type: 'developer', placeholder: "Search for a developer..." %>


<h1>All companies</h1>

<ul>
<% @companies.each do |company| %>
  <li><%= link_to company.name, company_path(company) %></li>
 <% end %>
</ul>

<h2>All Jobs</h2>
<ul>
  <% @companies.each do |company| %>
    <% company.jobs.each do |job| %>
      <li><%= link_to job.job_title, job_path(job) %></li>
    <% end %>
 <% end %>
</ul>

