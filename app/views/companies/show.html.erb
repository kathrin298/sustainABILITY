<h1><%= @company.name %></h1>

<p>Location: <%= @company.location %></p>
<p>Mission: <%= @company.mission %></p>
<p>Industry: <%= @company.industry %></p>
<p>employees: <%= @company.employees %></p>
<p>bio: <%= @company.bio %></p>

<% if policy(@company).edit? %>
  <%= link_to "edit", edit_company_path(@company) %>
<% end %>

<% if policy(@company).destroy? %>
  <%= link_to "DeleteAccount", registration_path(:user),
    method: :delete, data: { confirm: "Are you sure you want to delete your company account?" }  %>
<% end %>

<h2>Open jobs</h2>
<ul>
<% @company.jobs.each do |job| %>
  <li><%= link_to job.job_title, job_path(job) %></li>
<% end %>
</ul>
