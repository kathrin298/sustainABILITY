<div class="container">
  <h5 style="text-align: right; color: blue">Your Application for: <strong><%= @job.job_title %></strong> </h5>
  <h4 style="padding: 15px 0">Please answer the following questions:</h4>
    <form action="/answers" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :user_id, current_user.id %>
      <div class="row">
        <% @job.questions.each_with_index do |question, index| %>
          <div class="col-12">
            <%= question.content %>
            <textarea class="form-control application-form" rows="5" cols="60" name="question[<%= question.id %>]"></textarea>
          </div>
        <% end %>
      </div>
      <input class="btn-flat" type="submit">
    </form>
</div>

