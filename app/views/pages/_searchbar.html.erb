<div>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "search-bar",
      placeholder: placeholder
    %>
    <%= button_tag(type: 'submit', class: "btn-search") do %>
       <i class="fas fa-search"></i>
    <% end %>
    <%= hidden_field_tag :search_type , search_type %>
  <% end %>
</div>
